<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg03"
    tools:context=".Stage2Activity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="1~99 숫자맞추기"
        app:titleTextColor="#E91E63"
        app:titleTextAppearance="@style/toolbar_stage2"
        app:titleCentered="true"
        app:navigationIcon="@drawable/baseline_arrow_back_ios_24"
        android:layout_margin="8dp"/>




    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:fontFamily="@font/single"
        android:gravity="center"
        android:text="몇번만에 맞출까용~?"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/et_199"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="8"
        android:fontFamily="@font/single"
        android:gravity="center"
        android:hint="숫자입력"
        android:inputType="phone"
        android:maxLength="2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btn_199"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="#FF000000"
        android:fontFamily="@font/single"
        android:text="입력"
        android:textSize="20sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/single"
        android:gravity="center"
        android:text=""
        android:layout_weight="1"
        android:textSize="30sp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:gravity="center">

        <Button
            android:id="@+id/btn_Retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF9FC0"
            android:fontFamily="@font/single"
            android:text="다시하기"
            android:textSize="24sp"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="24dp"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FF9FC0"
            android:fontFamily="@font/single"
            android:text="기록 저장"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>