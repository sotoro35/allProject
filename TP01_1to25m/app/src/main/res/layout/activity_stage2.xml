<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg02"
    tools:context=".Stage2">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bom"
        android:text="1 ~ 99 \n숫자 맞추기"
        android:textSize="50sp"
        android:gravity="center"
        android:layout_marginTop="70dp"/>
    <EditText
        android:id="@+id/et199"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bom"
        android:ems="8"
        android:hint="숫자입력"
        android:textSize="30sp"
        android:maxLength="2"
        android:inputType="phone"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn199"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bom"
        android:text="입력"
        android:textSize="20sp"
        android:backgroundTint="#FF000000"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/tv199"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bom"
        android:text="몇번만에 맞출까용~?"
        android:textSize="30sp"
        android:gravity="center"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom|center">

        <Button
            android:id="@+id/btn199s"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:fontFamily="@font/bom"
            android:text="기록"
            android:textSize="30sp"
            android:backgroundTint="#009688"
            android:layout_marginRight="10dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn199h"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:fontFamily="@font/bom"
            android:text="처음화면"
            android:backgroundTint="#E91E63"
            android:textSize="30sp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/testsavebtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bom"
            android:text="기록하기"
            android:backgroundTint="#E91E63"
            android:textSize="30sp"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/textbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bom"
            android:text="처음화면"
            android:backgroundTint="#E91E63"
            android:textSize="30sp"/>
    </LinearLayout>

</LinearLayout>