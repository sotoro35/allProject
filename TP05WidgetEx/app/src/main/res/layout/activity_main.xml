<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv01"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/moana05"
            android:layout_alignParentLeft="true"
            android:layout_marginHorizontal="20dp"/>
        
        <TextView
            android:id="@+id/tv01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android"
            android:textStyle="bold"
            android:textColor="#88000000"
            android:textSize="28sp"
            android:layout_toRightOf="@id/iv01"/>

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello. How are you today?"
            android:textSize="15sp"
            android:textColor="#88000000"
            android:layout_below="@id/tv01"
            android:layout_toRightOf="@id/iv01"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024.01.26"
            android:textSize="15sp"
            android:textColor="#88000000"
            android:layout_below="@id/tv01"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/iv01"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"/>

        <HorizontalScrollView
            android:id="@+id/sv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv01"
            android:layout_alignParentLeft="true"
            android:scrollbars="none"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv01"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana01"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv02"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana02"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv03"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana03"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv04"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana04"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv05"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana05"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv06"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana01"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv07"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana02"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv08"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana03"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv09"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana04"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cv10"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/moana05"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#FF000000"
                    android:layout_marginRight="7dp"/>
            </LinearLayout>

        </HorizontalScrollView>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#55000000"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:layout_below="@id/sv"/>

        <TextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="androidprimeinfo"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/v"/>

        <TextView
            android:id="@+id/tv04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Metro Manila, Philippines"
            android:textSize="16sp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv03"/>


        <ImageView
            android:id="@+id/icbtn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_dehaze_24"
            android:adjustViewBounds="true"
            android:layout_below="@+id/v"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"/>

        <ImageView
            android:id="@+id/imgbtn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/paris"
            android:adjustViewBounds="true"
            android:layout_below="@+id/tv04"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true" />



            <ImageView
                android:id="@+id/icbtn02"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_cruelty_free_24"
                android:adjustViewBounds="true"
                android:layout_marginRight="10dp"
                android:layout_alignStart="@id/tv04"
                android:layout_below="@id/imgbtn01"/>

        <ImageView
            android:id="@+id/icbtn03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_chat_bubble_outline_24"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/icbtn02"
            android:layout_below="@id/imgbtn01"/>

        <ImageView
            android:id="@+id/icbtn04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_airplane_ticket_24"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@id/icbtn03"
            android:layout_below="@id/imgbtn01"/>

        <ImageView
            android:id="@+id/icbtn05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_collections_24"
            android:adjustViewBounds="true"
           android:layout_alignStart="@id/icbtn01"
            android:layout_below="@id/imgbtn01"/>

        <View
            android:id="@+id/v2"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="#55000000"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="8dp"
            android:layout_below="@id/icbtn05"/>

        <TextView
            android:id="@+id/tv05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write yout description here..."
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/v2"/>

        <TextView
            android:id="@+id/tv06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="26 MINUTES AGO."
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/tv05"/>




















    </RelativeLayout>







</LinearLayout>